<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ProfilActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:src="@mipmap/ic_headphone"
        android:id="@+id/iv_logo"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Player"
        android:textSize="50sp"
        android:fontFamily="@font/data_latin"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="20sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFIL"
        android:textSize="20sp"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="20sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto_regular"
        android:text="Nama  :   Agnesia\nNIM   :    00000027731\nKelas  :   CL"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ref"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:fontFamily="@font/roboto_regular"
        android:text="Referensi:\nYoutube: Code with Evan, Gadgets and Technical field Android Tech, \nWebsite : Tutorials Point\n"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/swipeRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Agnesia - 27731\nUTS IF-633 C Mobile Application Programming"
        android:textSize="15sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/blue_500"
        android:layout_marginBottom="20sp"
        android:gravity="center|bottom"/>

</LinearLayout>