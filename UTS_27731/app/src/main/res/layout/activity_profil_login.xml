<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProfilLogin">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:src="@mipmap/ic_headphone"
        android:id="@+id/iv_logo"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Player"
        android:textSize="50sp"
        android:fontFamily="@font/data_latin"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:layout_below="@id/iv_logo" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFIL"
        android:textSize="20sp"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@id/tv_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:layout_below="@id/tv_subtitle"
        android:fontFamily="@font/roboto_regular"
        android:text="Nama  :   Agnesia\nNIM   :    27731\nKelas  :   CL"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@id/tv_name">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Referensi (Click to Open Link) : "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Youtube : "/>
        <TextView
            android:id="@+id/linkmusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/musicplayer"/>
        <TextView
            android:id="@+id/link_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/linkoptionmenu"/>
        <TextView
            android:id="@+id/link_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/clickablelink"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Website : "/>
        <TextView
            android:id="@+id/link_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/tutorialspoint"/>
    </LinearLayout>

    <TextView
        android:id="@+id/swipeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agnesia - 27731\nUTS IF-633 C Mobile Application Programming"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/raleway_bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/blue_500"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>